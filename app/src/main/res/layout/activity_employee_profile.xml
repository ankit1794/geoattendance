<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_default_toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_employee_attendance_image"
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:src="@drawable/ic_signup_profile"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/txt_employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Name of the Employee"
        android:gravity="center"
        android:layout_marginTop="@dimen/m_16"
        android:layout_below="@+id/civ_employee_attendance_image"/>
    <TextView
        android:id="@+id/txt_employee_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_employee_name"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/m_16"
        android:text="Company Name"
        />
    <TextView
        android:id="@+id/txt_employee_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/txt_employee_company_name"
        android:layout_marginTop="@dimen/m_16"
        android:text="Email ID"
        android:gravity="center"
        />



</RelativeLayout>